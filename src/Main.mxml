	<s:layout>
		<s:VerticalLayout horizontalAlign="left" />
	</s:layout>
	
	<mx:HBox borderStyle="solid" height="5%"> <!-- delete this later -->

            <!-- Define the three buttons. 
                Each uses the child container identifier 
                to set the active child container. -->
            <mx:Button id="loginSwitchButton"
                label="Login Screen" 
                click="appViewStack.selectedIndex=0;"/>

            <mx:Button id="gameSelectSwitchButton" 
                label="Saved Game Select Screen" 
                click="appViewStack.selectedIndex=1;"/>

            <mx:Button id="levelSelectSwitchButton" 
                label="Choose Region Screen"
                click="appViewStack.selectedIndex=2;"/>
				
			<mx:Button id="gameSwitchButton"
				label="Gameplay Screen"
				click="appViewStack.selectedIndex=3;"/>
				
			<mx:Button id="registerSwitchButton"
				label="Registration Screen"
				click="appViewStack.selectedIndex=4;"/>
				
    </mx:HBox>
	
	<mx:ViewStack selectedIndex = "0" height="95%" width="100%" id="appViewStack">
		<s:NavigatorContent height="100%" width="100%">
			<views:loginv id="loginScreen" height="100%" width="100%" />
		</s:NavigatorContent>
		<s:NavigatorContent height="100%" width="100%">
			<views:gameselectv id="gameSelectScreen" height="100%" width="100%" />
		</s:NavigatorContent>
		<s:NavigatorContent height="100%" width="100%">
			<views:levelselectv id="levelSelectScreen" height="100%" width="100%" />
		</s:NavigatorContent>
		<s:NavigatorContent height="100%" width="100%">
			<views:gamev id="gameScreen" height="100%" width="100%"/>
		</s:NavigatorContent>
		<s:NavigatorContent height="100%" width="100%">
			<views:registrationv id="registerScreen" height="100%" width="100%" />
		</s:NavigatorContent>
	</mx:ViewStack>
	
